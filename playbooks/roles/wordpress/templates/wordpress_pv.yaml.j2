---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{ wordpress_name }}-local-volume"
  labels:
    app: "{{ wordpress_name }}"
spec:
  capacity:
    storage: 20Gi
  accessModes:
  - ReadWriteOnce
  hostPath:
    path: /tmp/data/{{ wordpress_name }}
  persistentVolumeReclaimPolicy: Recycle
